{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["types/styled-components.d.ts"]
}
