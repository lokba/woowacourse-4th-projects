{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": false,
    "moduleResolution": "node",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
